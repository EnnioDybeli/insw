extends layout
block content

  body
    .post
      header
        .logo
          a(href='/home')
            img(src="/img/logo2.png")
        .avatar
          span=User.name + " " + User.surname
          img(src='/img/avatar.png')

          .logout
            a(href="/logout")
              | logout
      .blog
        .menu
          if User.admin !== true
            ul.menulist

              li( class="active" id="kryesore" )
                | Pergjithshme

              li( id="#{Paralel}" )
                | Paraleli 

              li( id="#{User.group}" )
                | Grupi #{User.group}
          else 
            ul.droplist
                li( class="active" id="kryesore" )
                  | Kryesore
                span.divider
                select(name='filter_viti' id="filter_viti" class="feed-filter" style="margin-left:50px")
                  option(value="1")="Viti 1"
                  option(value="2")="Viti 2"
                  option(value="3")="Viti 3"

                select(name='filter_grupi' id="filter_grupi" class="feed-filter")
                  option(value="a1")="A1"
